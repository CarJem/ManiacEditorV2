                <ToolBar Band="0" BandIndex="1" HorizontalAlignment="Stretch" Height="45" x:Name="MainToolbarButtons" Background="{StaticResource NormalBackground}" Foreground="{StaticResource NormalText}">
                    <Button x:Name="New" Style="{StaticResource DisabledState2}" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" IsEnabled="True" Content="{StaticResource AddFile}"></Button>
                    <Button x:Name="Open" Width="32" Style="{StaticResource DisabledState2}"  Margin="0,0,0,0" Padding="0,0,0,0">
                        <Button.Content>
                            <DockPanel Width="26" Height="36">
                                <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Name="svg318" Width="24" Height="24">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform X="0" Y="0"/>
                                    </Canvas.RenderTransform>
                                    <Canvas.Resources/>
                                    <!--Unknown tag: metadata-->
                                    <!--Unknown tag: sodipodi:namedview-->
                                    <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="path314" Data="M0 0h24v24H0V0z"/>
                                    <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="FolderIcon" Fill="#FFE793" Data="M10 4H2v16h20V6H12l-2-2z"/>
                                </Canvas>
                            </DockPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="Save" Style="{StaticResource DisabledState2}" Width="32" Margin="0,0,0,0"  Padding="0,0,0,0" Content="{StaticResource SaveFloppy}"></Button>
                    <Separator/>
                    <Button x:Name="ZoomInButton" Style="{StaticResource DisabledState2}" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource ZoomIn}"></Button>
                    <Button x:Name="ZoomOutButton" Style="{StaticResource DisabledState2}" Width="32"   Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource ZoomOut}"></Button>
                    <Separator/>
                    <Button x:Name="RunSceneButton" Width="32" Height="34"  Margin="0,0,0,0" Padding="0,0,0,0" Style="{StaticResource DisabledState2}">
                        <Button.Content>
                            <DockPanel Width="26" Height="36">
                                <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Name="svg128" Width="24" Height="24">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform X="0" Y="0"/>
                                    </Canvas.RenderTransform>
                                    <Canvas.Resources/>
                                    <!--Unknown tag: metadata-->
                                    <!--Unknown tag: sodipodi:namedview-->
                                    <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="path124" Data="M0 0h24v24H0z"/>
                                    <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="RunSceneIcon" Fill="Green" Data="M15 7.5V2H9v5.5l3 3 3-3zM7.5 9H2v6h5.5l3-3-3-3zM9 16.5V22h6v-5.5l-3-3-3 3zM16.5 9l-3 3 3 3H22V9h-5.5z"/>
                                </Canvas>
                            </DockPanel>
                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0" Width="34" Margin="0,0,0,0" Padding="0,0,0,0" Style="{DynamicResource RemoveMouseOverEffectType2}" VerticalAlignment="Center">
                        <Button.Content>
                            <StackPanel Background="{StaticResource NormalBackground}" Height="32" Width="32">
                                <Menu Background="{StaticResource NormalBackground}" Padding="0" BorderThickness="0" Margin="1" Height="30">
                                    <MenuItem  x:Name="RunSceneDropDown" Header="{StaticResource DownArrow}" Padding="4,-3,3,0" Height="30">
                                        <MenuItem x:Name="launchToolStripMenuItem" Header="Launch/Attach/Focus"/>
                                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                        <MenuItem x:Name="trackThePlayerToolStripMenuItem" Header="Track the Player...">
                                            <MenuItem x:Name="trackP1ToolStripMenuItem" Header="Track P1" Tag="1"/>
                                            <MenuItem x:Name="trackP2ToolStripMenuItem" Header="Track P2" Tag="2"/>
                                            <MenuItem x:Name="trackP3ToolStripMenuItem" Header="Track P3" Tag="3"/>
                                            <MenuItem x:Name="trackP4ToolStripMenuItem" Header="Track P4" Tag="4"/>
                                        </MenuItem>
                                        <MenuItem x:Name="restartSceneToolStripMenuItem1" Header="Restart Scene"/>
                                        <MenuItem x:Name="assetResetToolStripMenuItem1" Header="Asset Reset"/>
                                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                        <MenuItem x:Name="openModManagerToolStripMenuItem" Header="Open Mod Manager"/>
                                        <MenuItem x:Name="selectConfigToolStripMenuItem" Header="Select Config...">
                                            <MenuItem x:Name="noConfigFilesToolStripMenuItem" Header="No Config Files" IsEnabled="False"/>
                                        </MenuItem>
                                        <MenuItem x:Name="editConfigsToolStripMenuItem1" Header="Edit Configs"/>
                                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                        <MenuItem x:Name="gameOptionsMenuItem" Header="Game Options..."/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Separator/>
                    <Button x:Name="UndoButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Tag="Undo {0} (Ctrl + Z)" Content="{StaticResource UndoIcon}" Style="{StaticResource DisabledState2}"></Button>
                    <Button x:Name="RedoButton" Width="32"   Margin="0,0,0,0" Padding="0,0,0,0" Tag="Redo {0} (Ctrl + Y)" Content="{StaticResource RedoIcon}" Style="{StaticResource DisabledState2}"></Button>
                    <Separator/>
                    <Button x:Name="ReloadButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Refresh}" Style="{StaticResource DisabledState2}"></Button>
                    <Separator/>
                    <ToggleButton x:Name="PointerToolButton" Content="{StaticResource Pointer}" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <ToggleButton x:Name="SelectToolButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0"  Content="{StaticResource Select}" Foreground="Red" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <ToggleButton x:Name="DrawToolButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Draw}" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <ToggleButton x:Name="SplineToolButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Shapes}" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <ToggleButton x:Name="InteractionToolButton" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Interaction}" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <ToggleButton x:Name="MagnetMode" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Magnet}" Style="{StaticResource DisabledState1}"></ToggleButton>
                    <Button Visibility="Collapsed" x:Name="MagnetModeSplitButton" BorderThickness="0" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Style="{DynamicResource RemoveMouseOverEffectType2}" VerticalAlignment="Center">
                        <Button.Content>
                            <StackPanel Background="{StaticResource NormalBackground}" Height="32" Width="32">
                                <Menu Background="{StaticResource NormalBackground}" Padding="0" BorderThickness="0" Margin="0,-1,0,0">
                                    <MenuItem x:Name="MagnetModeSplitDropDown" Foreground="{StaticResource NormalText}" Header="{StaticResource DownArrow2}" Height="34">

                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <ToggleButton x:Name="ChunksToolButton" Style="{StaticResource DisabledState1}"   Width="32"  Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Stamp}"></ToggleButton>
                    <Separator/>
                    <ToggleButton x:Name="EncorePaletteButton" Style="{StaticResource DisabledState1}" Width="32" Height="34"  Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource PaletteWheel}"></ToggleButton>
                    <ToggleButton x:Name="ShowTileIDButton" Style="{StaticResource DisabledState1}"  Width="32"  Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Info}"></ToggleButton>
                    <ToggleButton x:Name="FlipAssistButton" Style="{StaticResource DisabledState1}"  Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource RotateFlip}"></ToggleButton>
                    <ToggleButton x:Name="ShowGridButton" Style="{StaticResource DisabledState1}" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Content="{StaticResource Grid}"></ToggleButton>
                    <Button Visibility="Collapsed" BorderThickness="0" Width="32" Margin="0,0,0,0" Padding="0,0,0,0" Style="{DynamicResource RemoveMouseOverEffectType2}" VerticalAlignment="Center">
                        <Button.Content>
                            <StackPanel Background="{StaticResource NormalBackground}" Height="32" Width="32">
                                <Menu Background="{StaticResource NormalBackground}" Padding="0" BorderThickness="0" Margin="0,-1,0,0">
                                    <MenuItem x:Name="GridSizeButton" Foreground="{StaticResource NormalText}" Header="{StaticResource DownArrow3}" Height="34">
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Separator/>
                    <ToggleButton Checked="ShowCollisionButton_Click" Unchecked="ShowCollisionButton_Click" x:Name="ShowCollisionAButton" Width="32"  Margin="0,0,0,0" Padding="0,0,0,0" Style="{StaticResource DisabledState1}" Content="{StaticResource PathA}"></ToggleButton>
                    <ToggleButton Checked="ShowCollisionButton_Click" Unchecked="ShowCollisionButton_Click" x:Name="ShowCollisionBButton" Width="32"  Margin="0,0,0,0" Padding="0,0,0,0" Style="{StaticResource DisabledState1}" Content="{StaticResource PathB}"></ToggleButton>
                    <Separator/>
                    <Grid HorizontalAlignment="Left">
                    </Grid>
                    <ToolBar.Resources>
                        <Style x:Key="ToolBarMainPanelBorderStyle" TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0,0,0,0"/>
                        </Style>
                    </ToolBar.Resources>
                </ToolBar>
                <ToolBar x:Name="LayerToolbar" Band="1" BandIndex="0" Background="{StaticResource NormalBackground}" Foreground="{StaticResource NormalText}" Margin="0,0,-4,0" >
                    <Grid MinWidth="50" MaxWidth="90" HorizontalAlignment="Left">
                        <Grid x:Name="LayerHint" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LayerLabel" Foreground="{StaticResource NormalText}" Grid.Row="0" Text="Layers:"/>
                        </Grid>
                    </Grid>
                    <Separator Margin="0,2"/>
                    <ToggleButton x:Name="ShowFGLower" Background="Transparent" Foreground="{StaticResource NormalText}" Content="FG Lower" Style="{DynamicResource EditLayerFlat}"/>
                    <ToggleButton x:Name="ShowFGLow" Background="Transparent" Foreground="{StaticResource NormalText}" Content="FG Low" Style="{DynamicResource EditLayerFlat}"/>
                    <ToggleButton x:Name="ShowFGHigh" Background="Transparent" Foreground="{StaticResource NormalText}" Content="FG High" Style="{DynamicResource EditLayerFlat}"/>
                    <ToggleButton x:Name="ShowFGHigher" Background="Transparent" Foreground="{StaticResource NormalText}" Content="FG Higher" Style="{DynamicResource EditLayerFlat}"/>
                    <ToggleButton x:Name="ShowEntities" Background="Transparent" Foreground="{StaticResource NormalText}" Content="Entities" Style="{DynamicResource EditLayerFlat}"/>
                    <ToggleButton x:Name="ShowAnimations" Foreground="{StaticResource NormalText}" Content="Animations" Background="Transparent" Style="{DynamicResource EditLayerFlat}" IsEnabled="False"/>
                    <Button BorderThickness="0" Width="34" Margin="0,0,0,0" Padding="0,0,0,0" Style="{DynamicResource RemoveMouseOverEffectType2}" VerticalAlignment="Center">
                        <Button.Content>
                            <StackPanel Background="{StaticResource NormalBackground}" Height="32" Width="32">
                                <Menu Background="{StaticResource NormalBackground}" Padding="0" BorderThickness="0" Margin="1" Height="30">
                                    <MenuItem  x:Name="animationsSplitButton_Dropdown" Header="{StaticResource DownArrow4}" Padding="4,-3,3,0" Height="30">
                                        <MenuItem x:Name="movingPlatformsObjectsToolStripMenuItem" Header="Moving Platforms / Objects"></MenuItem>
                                        <MenuItem x:Name="spriteFramesToolStripMenuItem" Header="Sprite Frames"></MenuItem>
                                        <MenuItem x:Name="parallaxAnimationMenuItem" Header="Parallax Animation (Will Disable Editing)"></MenuItem>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Separator Margin="0,2"/>
                    <Separator x:Name="extraViewLayersSeperator" Margin="0,2" Visibility="Collapsed"/>
                    <local:EditLayerToggleButton IsLayerOptionsEnabled="True" x:Name="EditFGLower" Text="FG Lower" TextForeground="Red"></local:EditLayerToggleButton>
                    <local:EditLayerToggleButton IsLayerOptionsEnabled="True" x:Name="EditFGLow" Text="FG Low" TextForeground="Red"></local:EditLayerToggleButton>
                    <local:EditLayerToggleButton IsLayerOptionsEnabled="True" x:Name="EditFGHigh" Text="FG High" TextForeground="Red"></local:EditLayerToggleButton>
                    <local:EditLayerToggleButton IsLayerOptionsEnabled="True" x:Name="EditFGHigher" Text="FG Higher" TextForeground="Red"></local:EditLayerToggleButton>
                    <local:EditLayerToggleButton x:Name="EditEntities" Text="Entities" TextForeground="Red"/>


                    <ToolBar.Resources>
                        <Style x:Key="ToolBarMainPanelBorderStyle" TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0,0,0,0"/>
                        </Style>
                    </ToolBar.Resources>
                </ToolBar>
            </ToolBarTray>

            <Grid Visibility="Hidden" x:Name="MultiLayerHint" Grid.Row="1" Margin="0,0,10,0" VerticalAlignment="Top" Grid.Column="1">
                <StackPanel Background="Transparent">
                    <TextBlock HorizontalAlignment="Center"  Text="Multi-Layer Select Controls:" Foreground="{StaticResource NormalText}"></TextBlock>
                    <Separator></Separator>
                    <TextBlock x:Name="LayerALabel" HorizontalAlignment="Center" Foreground="{DynamicResource EditLayerASelectedColor}" Grid.Row="0" Text="Edit Layer A: Right Click"/>
                    <TextBlock x:Name="LayerBLabel"  HorizontalAlignment="Center"  Foreground="{DynamicResource EditLayerBSelectedColor}" Grid.Row="1" Text="Edit Layer B: Left Click"/>
                </StackPanel>
            </Grid>
            <wpfTool:SplitButton x:Name="FutureAddonButton" Visibility="Collapsed" Grid.RowSpan="2" Margin="5,0,0,0" Width="19" Grid.Column="1">
                <wpfTool:SplitButton.DropDownContent>
                    <StackPanel Background="{DynamicResource ContextMenuBackground}">
                        <MenuItem Header="Swap Current Edit Layers"></MenuItem>
                    </StackPanel>
                </wpfTool:SplitButton.DropDownContent>
            </wpfTool:SplitButton>
        </Grid>

    </Grid>
</Window>
    
    
