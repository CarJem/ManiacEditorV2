<Window x:Name="EditorViewWPF" x:Class="ManiacEDv2.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
        xmlns:in="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"        
        xmlns:render="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"  
        xmlns:local="clr-namespace:ManiacEDv2"
        mc:Ignorable="d"    
        Title="ManiacEDv2 Rendering Test" Height="759" Width="1184" MinWidth="1184" MinHeight="759" SizeChanged="EditorViewWPF_SizeChanged" Closed="EditorViewWPF_Closed">
    <Grid x:Name="ParentGrid" MouseWheel="DevicePanel_MouseWheel" Background="{DynamicResource NormalBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="533*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="604*"/>
            <ColumnDefinition Width="286*"/>
        </Grid.ColumnDefinitions>




        <StatusBar x:Name="StatusBar1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="4" Height="35" Grid.Row="3" BorderThickness="1" Foreground="{StaticResource NormalText}" Background="{DynamicResource StatusBarBackground}" BorderBrush="{DynamicResource ContextMenuBorder}">
            <Label x:Name="positionLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator1" Visibility="Collapsed"/>
            <Label x:Name="selectedPositionLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator2" Visibility="Collapsed"/>
            <Label x:Name="selectionSizeLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator3" Visibility="Collapsed"/>
            <Label x:Name="selectionBoxSizeLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator4" Visibility="Collapsed"/>
            <Label x:Name="hVScrollBarXYLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator6" Visibility="Collapsed"/>
            <Label x:Name="hScrollBarValueLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator8" Visibility="Collapsed"/>
            <Label x:Name="vScrollBarValueLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator9" Visibility="Collapsed"/>
            <StatusBarItem HorizontalAlignment="Right" DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal">
                    <wpfTool:SplitButton x:Name="MoreSettingsButton" Margin="-2" Content="{StaticResource Gear}">
                        <wpfTool:SplitButton.DropDownContent>
                            <StackPanel Background="{DynamicResource ContextMenuBackground}">
                                <MenuItem x:Name="QuickEditEntitiesTransparentLayers" Header="Edit Entites Transparency"></MenuItem>
                                <MenuItem x:Name="QuickSwapEncoreManiaEntitVisibility" Header="Toggle Encore/Mania Entities"></MenuItem>
                                <MenuItem x:Name="QuickSwapScrollDirection" Header="Swap Scroll Lock Direction"></MenuItem>
                            </StackPanel>
                        </wpfTool:SplitButton.DropDownContent>
                    </wpfTool:SplitButton>
                    <Button Name="FilterButton" Margin="4,-2,0,-2" Width="30" Content="{StaticResource Invert}" Padding="2">
                        <Button.ContextMenu>
                            <ContextMenu Name="Context" Style="{StaticResource DefaultContextMenuStyle}">
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="maniaFilterCheck" Margin="5">Mania (000000)</CheckBox>
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="bothFilterCheck" Margin="5">Common (000000)</CheckBox>
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="pinballFilterCheck" Margin="5">Pinball (000000)</CheckBox>
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="encoreFilterCheck" Margin="5">Encore (000000)</CheckBox>
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="otherFilterCheck" Margin="5" Content="Other (000000)"></CheckBox>
                               <CheckBox Style="{StaticResource CheckBoxStyle1}"  x:Name="prePlusFilterCheck" Margin="5" Content="Filterless (Pre-Plus)"></CheckBox>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal">
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                    <ToggleButton Style="{DynamicResource Flat}" x:Name="pixelModeButton" Content="Pixel Count Mode" HorizontalAlignment="Center" Padding="5"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                    <ToggleButton  Style="{DynamicResource Flat}" x:Name="nudgeFasterButton" Content="Nudge Faster" Padding="5"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                    <ToggleButton Style="{DynamicResource Flat}" x:Name="scrollLockButton" Content="Scroll Lock" Padding="5"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" DockPanel.Dock="Right">
            </StatusBarItem>
            <MenuItem x:Name="EntityContext" Visibility="Collapsed">
                <MenuItem x:Name="EntityNameItem" IsHitTestVisible="False"></MenuItem>
                <MenuItem x:Name="EntitySlotIDItem" IsHitTestVisible="False"></MenuItem>
                <MenuItem x:Name="EntityPositionItem" IsHitTestVisible="False"></MenuItem>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </MenuItem>
            <MenuItem x:Name="TilesContext" Visibility="Collapsed">
                <MenuItem x:Name="PixelPositionMenuItem" IsHitTestVisible="False"></MenuItem>
                <MenuItem x:Name="ChunkPositionMenuItem" IsHitTestVisible="False"></MenuItem>
                <MenuItem x:Name="TilePositionMenuItem" IsHitTestVisible="False"></MenuItem>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <MenuItem x:Name="TileManiacIntergrationItem" Header="Edit Tile {0} with Tile Maniac"></MenuItem>
            </MenuItem>
        </StatusBar>
        <StatusBar x:Name="StatusBar2"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Row="4" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource StatusBarBackground}" BorderBrush="{DynamicResource ContextMenuBorder}">
            <Label x:Name="_levelIDLabel" Foreground="{StaticResource NormalText}"/>
            <Separator x:Name="seperator7" Visibility="Collapsed"/>
            <Label x:Name="_baseDataDirectoryLabel" Tag=" " Foreground="{StaticResource NormalText}"/>

            <StatusBarItem HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Label x:Name="scrollLockDirLabel" Foreground="{StaticResource NormalText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Separator x:Name="seperator5" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>

        <Grid Panel.ZIndex="1" Grid.ColumnSpan="4" Grid.RowSpan="2" Grid.Row="1"  Background="{StaticResource NormalBackground}" Margin="0,85,0,0">
            <TabControl Name="EditorTabControl" BorderThickness="0 1 0 0" Background="{StaticResource NormalBackground}">
                <TabItem Header="Editor" HorizontalAlignment="Right" Visibility="Hidden">
                    <Grid>
                        <Border Grid.ColumnSpan="5" Margin="10" BorderBrush="Transparent" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="5"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Rectangle x:Name="ScrollBorderNE" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Fill="Transparent"></Rectangle>
                                <Rectangle x:Name="ScrollBorderE" Grid.Column="3" Grid.Row="0" Grid.RowSpan="4"  Fill="Transparent"></Rectangle>
                                <Rectangle x:Name="ScrollBorderSE" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" Fill="Transparent"></Rectangle>

                                <Rectangle x:Name="ScrollBorderNW" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Fill="Transparent"></Rectangle>
                                <Rectangle x:Name="ScrollBorderW" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"  Fill="Transparent"></Rectangle>
                                <Rectangle x:Name="ScrollBorderSW" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="2" Fill="Transparent"></Rectangle>

                                <Rectangle x:Name="ScrollBorderN" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Fill="Transparent"></Rectangle>
                                <Rectangle x:Name="ScrollBorderS" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3" Fill="Transparent"></Rectangle>
                                <Grid x:Name="OverlayPanel" Grid.RowSpan="6" Grid.ColumnSpan="6" Background="{DynamicResource NormalBackground}" Margin="3">
                                    <Grid x:Name="SplitContianer">
                                        <Grid Name="gridMain">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition x:Name="ToolbarLeft" Width="180" MaxWidth="180" MinWidth="0"/>
                                                <ColumnDefinition x:Name="SplitterLeft" Width="6" MaxWidth="0" MinWidth="0"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition x:Name="SplitterRight" Width="6" MinWidth="0" MaxWidth="0"/>
                                                <ColumnDefinition x:Name="ToolbarRight" Width="0" MinWidth="0" MaxWidth="0"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid x:Name="WaitingPanel" Grid.Column="2" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource NormalBackground}" Opacity="0.2">
                                                <TextBlock FontSize="30" TextAlignment="Center" Foreground="{StaticResource NormalText}" HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Working..."/><LineBreak/><Run Text="(Please Wait!)"/></TextBlock>
                                            </Grid>
                                            <TabControl Margin="-15,0,0,0" BorderThickness="0" Background="{StaticResource NormalBackground}" x:Name="LeftToolbarToolbox" Grid.Column="0" TabStripPlacement="Left" >
                                                <TabItem Header="X">
                                                </TabItem>
                                                <TabItem Header="Tools">
                                                    <TabItem.LayoutTransform>
                                                        <RotateTransform Angle="270"></RotateTransform>
                                                    </TabItem.LayoutTransform>
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <Expander IsExpanded="False" Header="Spline Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Background="{StaticResource NormalBackground}" Margin="5">
                                                                        <Label Foreground="{StaticResource NormalText}" Content="Spline Spawn Group ID:"></Label>
                                                                        <wpfTool:IntegerUpDown x:Name="SplineSpawnID" Value="0" Minimum="0" Maximum="600"></wpfTool:IntegerUpDown>
                                                                        <Expander IsExpanded="False" Header="Group Options" Foreground="{StaticResource NormalText}">
                                                                            <StackPanel Background="{StaticResource NormalBackground}" Margin="5">
                                                                                <Label Foreground="{StaticResource NormalText}" Content="Spline Group ID"></Label>
                                                                                <wpfTool:IntegerUpDown Value="0" Minimum="0" Maximum="600" x:Name="SplineGroupID"></wpfTool:IntegerUpDown>
                                                                                <Separator Margin="0,10"></Separator>
                                                                                <Label Content="Group Options:" IsEnabled="False"></Label>
                                                                                <Separator Margin="0,10"></Separator>
                                                                                <Label Foreground="{StaticResource NormalText}" Content="Frequency of Points" x:Name="SplinePointSeperationLabel"></Label>
                                                                                <Slider Value="128" Minimum="4" Maximum="600" x:Name="SplinePointSeperationSlider"></Slider>
                                                                                <wpfTool:IntegerUpDown x:Name="SplinePointSeperationNUD" Value="128" Minimum="4" Maximum="600"></wpfTool:IntegerUpDown>
                                                                               <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" Content="Show Line" Name="SplineShowLineCheckbox" IsChecked="True"></CheckBox>
                                                                               <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" Content="Show Points" Name="SplineShowPointsCheckbox" IsChecked="True"></CheckBox>
                                                                               <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" Name="SplineShowObjectsCheckbox">
                                                                                    <CheckBox.Content>
                                                                                        <TextBlock Text="Show Object Preview" TextWrapping="Wrap"></TextBlock>
                                                                                    </CheckBox.Content>
                                                                                </CheckBox>
                                                                                <Separator Margin="0,10"></Separator>

                                                                                <Label Foreground="{StaticResource NormalText}" Content="Spline Shape: "></Label>
                                                                                <RadioButton Foreground="{StaticResource NormalText}" Content="Square" Name="SplineLineMode" IsEnabled="False" IsChecked="True"></RadioButton>
                                                                                <RadioButton Foreground="{StaticResource NormalText}" Content="Oval" Name="SplineOvalMode" IsChecked="True"></RadioButton>
                                                                                <Separator Margin="0,10"></Separator>
                                                                                <Label>

                                                                                    <Label.Content>
                                                                                        <TextBlock Foreground="{StaticResource NormalText}" Text="Spline Spawn Object" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                                                                                    </Label.Content>
                                                                                </Label>
                                                                                <Grid>
                                                                                    <ComboBox x:Name="SelectedSplineRender" ></ComboBox>
                                                                                    <Button  Content="None" VerticalAlignment="Stretch" x:Name="SplineRenderObjectName"></Button>
                                                                                </Grid>
                                                                            </StackPanel>

                                                                        </Expander>


                                                                        <TextBlock x:Name="SplineInfoLabel1" Visibility="Collapsed" Text="Number of Spline Objects: {0}"></TextBlock>
                                                                        <TextBlock x:Name="SplineInfoLabel2" Visibility="Collapsed" Text="Point Frequency: {0}"></TextBlock>
                                                                        <TextBlock x:Name="SplineInfoLabel3" Visibility="Collapsed" Text="Total Number of Spawing Objects: {0}"></TextBlock>
                                                                        <Button Content="Render Selected Spline"></Button>
                                                                        <Button Content="Render All Splines"></Button>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                            <Expander Header="Draw Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="5">
                                                                        <Label Foreground="{StaticResource NormalText}" Content="Brush Size (Tiles Edit Only)" x:Name="DrawTileSizeLabel"></Label>
                                                                        <Slider Value="1" Minimum="1" Maximum="16" TickPlacement="Both" IsSnapToTickEnabled="True" x:Name="DrawTileSizeSlider"></Slider>
                                                                        <wpfTool:IntegerUpDown x:Name="DrawTileSizeNUD" Value="1" Minimum="1" Maximum="16"></wpfTool:IntegerUpDown>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                            <Expander IsExpanded="False" Header="Magnet Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="5">
                                                                        <Label Foreground="{DynamicResource DisabledText}" x:Name="gridAlignmentSizeToolStripMenuItem" Content="Grid Alignment Size:"></Label>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="x8ToolStripMenuItem" Content="8x8"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="x16ToolStripMenuItem1" Content="16x16" IsChecked="true"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="x32ToolStripMenuItem" Content="32x32"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="x64ToolStripMenuItem" Content="64x64"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="MagnetCustomSizeToolStripMenuItem">
                                                                            <CheckBox.Content>
                                                                                <StackPanel Orientation="Horizontal" Background="Transparent" VerticalAlignment="Center">
                                                                                    <TextBlock Name="CustomMagnetLabel" Tag="Custom ({0}x{0})" VerticalAlignment="Center" Text="Custom (16x16)"></TextBlock>
                                                                                    <wpfTool:IntegerUpDown Width="20" Name="CustomMagnetSizeAdjuster" BorderBrush="Transparent" HorizontalAlignment="Right" Background="Transparent" DefaultValue="16"></wpfTool:IntegerUpDown>
                                                                                </StackPanel>
                                                                            </CheckBox.Content>
                                                                        </CheckBox>
                                                                        <Label Foreground="{DynamicResource DisabledText}" x:Name="optionsToolStripMenuItem1" Content="Options: "></Label>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" IsChecked="True" x:Name="enableXAxisToolStripMenuItem" Content="Enable X Axis"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" IsChecked="True" x:Name="enableYAxisToolStripMenuItem" Content="Enable Y Axis"></CheckBox>
                                                                    </StackPanel>
                                                                </Border>

                                                            </Expander>
                                                            <Expander IsExpanded="False" Header="Grid Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Background="{StaticResource NormalBackground}" Margin="5">
                                                                        <Label Foreground="{DynamicResource DisabledText}" x:Name="toolStripMenuItem1" Content="Grid Size:"></Label>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="Grid16x16SizeMenuItem" Content="16x16"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="Grid128x128SizeMenuItem" Content="128x128"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="Grid256x256SizeMenuItem" Content="256x256"></CheckBox>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="GridCustomSizeMenuItem">
                                                                            <CheckBox.Content>
                                                                                <StackPanel Orientation="Horizontal" Background="Transparent" VerticalAlignment="Center">
                                                                                    <TextBlock Name="CustomGridLabel" Tag="Custom ({0}x{0})" VerticalAlignment="Center" Text="Custom (16x16)"></TextBlock>
                                                                                    <wpfTool:IntegerUpDown Width="20" Name="CustomGridSizeAdjuster" BorderBrush="Transparent" HorizontalAlignment="Right" Background="Transparent" ></wpfTool:IntegerUpDown>
                                                                                </StackPanel>
                                                                            </CheckBox.Content>
                                                                        </CheckBox>
                                                                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition></ColumnDefinition>
                                                                                <ColumnDefinition></ColumnDefinition>
                                                                            </Grid.ColumnDefinitions>
                                                                            <Label Foreground="{StaticResource NormalText}" Content="Grid Color"></Label>
                                                                            <wpfTool:ColorPicker Style="{StaticResource ColorPicker1}" ShowTabHeaders="False" Width="60" Grid.Column="1" HorizontalAlignment="Right" SelectedColor="Black" x:Name="GDC"></wpfTool:ColorPicker>
                                                                        </Grid>
                                                                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                                                        <TextBlock HorizontalAlignment="Left">Opacity</TextBlock>
                                                                        <Slider x:Name="gridOpacitySlider" Value="255" Maximum="255" HorizontalAlignment="Stretch"></Slider>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                            <Expander IsExpanded="False" Header="Collision Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Background="{StaticResource NormalBackground}" Margin="5">
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="defaultToolStripMenuItem" Content="Default (Mania)"/>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="invertedToolStripMenuItem" Content="Inverted"/>
                                                                       <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="customToolStripMenuItem1" Content="Custom"/>
                                                                        <Expander Header="Custom Values..." Foreground="{StaticResource NormalText}">
                                                                            <StackPanel>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Label Foreground="{StaticResource NormalText}" Content="All"></Label>
                                                                                    <wpfTool:ColorPicker Style="{StaticResource ColorPicker1}" ShowTabHeaders="False" Width="60" Grid.Column="1" HorizontalAlignment="Right" SelectedColor="White" x:Name="CSAC"></wpfTool:ColorPicker>
                                                                                </Grid>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Label Foreground="{StaticResource NormalText}" Content="Top Only"></Label>
                                                                                    <wpfTool:ColorPicker Style="{StaticResource ColorPicker1}" ShowTabHeaders="False" Width="60" Grid.Column="1" HorizontalAlignment="Right" SelectedColor="Yellow" x:Name="SSTOC"></wpfTool:ColorPicker>
                                                                                </Grid>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                        <ColumnDefinition></ColumnDefinition>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <wpfTool:ColorPicker Style="{StaticResource ColorPicker1}" ShowTabHeaders="False" Width="60" Grid.Column="1" HorizontalAlignment="Right" SelectedColor="Red" x:Name="CSLRDC"></wpfTool:ColorPicker>
                                                                                    <Label Foreground="{StaticResource NormalText}" Content="LRD"></Label>
                                                                                </Grid>
                                                                            </StackPanel>
                                                                        </Expander>
                                                                        <StackPanel Orientation="Vertical">
                                                                            <Label Foreground="{StaticResource NormalText}" HorizontalAlignment="Left">Opacity</Label>
                                                                            <Slider x:Name="collisionOpacitySlider" Value="255" Maximum="255" HorizontalAlignment="Stretch"></Slider>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                            <Expander IsExpanded="False" Header="Other Options" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Background="{StaticResource NormalBackground}" Margin="5">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition></ColumnDefinition>
                                                                                <ColumnDefinition></ColumnDefinition>
                                                                            </Grid.ColumnDefinitions>
                                                                            <wpfTool:ColorPicker ShowTabHeaders="False" Width="60" Grid.Column="1" HorizontalAlignment="Right" SelectedColor="Blue" x:Name="WLC" Style="{StaticResource ColorPicker1}"></wpfTool:ColorPicker>
                                                                            <Label Foreground="{StaticResource NormalText}" Content="Water Color" Grid.ColumnSpan="1"></Label>
                                                                        </Grid>
                                                                        <StackPanel Orientation="Vertical" Margin="0,1">
                                                                            <Label Foreground="{StaticResource NormalText}" Content="Faster Nudge Amount" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                                                                            <wpfTool:IntegerUpDown Name="FasterNudgeValueNUD" Value="5" HorizontalAlignment="Left" Width="55"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </TabItem>
                                                <TabItem Header="Scene" >
                                                    <TabItem.LayoutTransform>
                                                        <RotateTransform Angle="270"></RotateTransform>
                                                    </TabItem.LayoutTransform>
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <Expander Header="Layer Tools" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="5">
                                                                        <Expander IsExpanded="False" Name="LayerViewOptionsHost" Header="View Options" Foreground="{StaticResource NormalText}">
                                                                            <Border BorderBrush="Black" BorderThickness="1">
                                                                                <StackPanel Margin="5">
                                                                                   <CheckBox Style="{StaticResource CheckBoxStyle1}" x:Name="moveExtraLayersToFrontToolStripMenuItem">
                                                                                        <TextBlock Foreground="{StaticResource NormalText}" Text="Move Extra Layers to Front" TextWrapping="Wrap"></TextBlock>
                                                                                    </CheckBox>
                                                                                </StackPanel>
                                                                            </Border>
                                                                        </Expander>
                                                                        <Expander IsExpanded="False" Name="layerEditOptionsHost" Header="Edit Options" Foreground="{StaticResource NormalText}">
                                                                            <Border BorderBrush="Black" BorderThickness="1">
                                                                                <StackPanel Margin="5">
                                                                                   <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="findUnusedTilesToolStripMenuItem" Content="Find Unused Tiles"/>
                                                                                   <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="multiLayerSelectionToolStripMenuItem" Content="Multi-Layer Selection Mode" IsEnabled="True" Visibility="Collapsed" IsChecked="True"/>
                                                                                   <CheckBox Style="{StaticResource CheckBoxStyle1}" Foreground="{StaticResource NormalText}" x:Name="copyAirToggle" >
                                                                                        <TextBlock Text="Copy Air Tiles" Name="CopyAirLabel" TextWrapping="Wrap"></TextBlock>
                                                                                    </CheckBox>
                                                                                </StackPanel>
                                                                            </Border>
                                                                        </Expander>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Expander>
                                                            <Expander Header="Entity Tools" Foreground="{StaticResource NormalText}">
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="5">
                                                                        <Expander IsExpanded="False" x:Name="EntitiesViewOptionsHost" Header="View Options" Foreground="{StaticResource NormalText}">
                                                                            <Border BorderBrush="Black" BorderThickness="1">
                                                                                <StackPanel Margin="5">
                                                                                    <Label x:Name="entityVisibilityOptionsToolStripMenuItem" IsEnabled="False">
                                                                                        <TextBlock TextWrapping="Wrap" Text="Entity Visibility Options:"></TextBlock>
                                                                                    </Label>
                                                                                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
