    <Style TargetType="{x:Type wpfTool:DoubleUpDown}">
        <Setter Property="ContextMenu" Value="{StaticResource StandardContextMenu}"/>
    </Style>
    <Style TargetType="{x:Type wpfTool:PropertyGridEditorDoubleUpDown}">
